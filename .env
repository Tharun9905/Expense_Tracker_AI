# Professional Email Configuration for Expense Tracker
# This is a sample configuration - copy from .env.template and fill in your actual values

# Email SMTP Configuration (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Professional Sender Information
SMTP_SENDER_NAME=Expense Tracker Notifications
SMTP_SENDER_EMAIL=your-email@gmail.com
FROM_EMAIL=your-email@gmail.com

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///expense_tracker.db

# Email Template Settings
EMAIL_TEMPLATES_DIR=templates/emails
EMAIL_LOG_LEVEL=INFO
SMTP_DEBUG=False

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_BUDGET_ALERTS=True
ENABLE_DAILY_SUMMARIES=True
ENABLE_ANOMALY_DETECTION=True

# Provider Info
EMAIL_PROVIDER=Gmail